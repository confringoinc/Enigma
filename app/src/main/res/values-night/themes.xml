<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="BottomAppBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/dark_elevation1</item>
    </style>

    <style name="EditText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/text_field</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/dark_elevation1</item>
    </style>

    <style name="EditTextStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/text_field</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/dark_elevation1</item>
    </style>

    <style name="ImageButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/image_button</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/dark_elevation1</item>
    </style>

    <style name="ImageButtonStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/text_field</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/dark_elevation4</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ImageView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/background_text_dark
        </item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ImageViewLogo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/background_text_dark
        </item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/text_field</item>
    </style>
</resources>